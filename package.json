{
    "name": "element-scope-ids",
    "version": "0.0.3",
    "description": "scope IDs to an element by rewriting them to be globally unique",
    "repository": "chocolateboy/element-scope-ids",
    "author": "chocolateboy",
    "license": "Artistic-2.0",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "npm run build:cjs && npm run build:esm",
        "build:cjs": "microbundle --no-compress --strict --format cjs src/index.cjs.ts",
        "build:esm": "microbundle --no-compress --strict --format es src/index.ts",
        "clean": "shx rm -rf ./dist ./.*cache*",
        "prepublishOnly": "npm run clean && npm run test",
        "test": "npm run build && node ./test.js"
    },
    "files": [
        "dist/index.d.ts",
        "dist/index.js",
        "dist/index.mjs"
    ],
    "dependencies": {
        "core-js": "^2.5.7",
        "little-emitter": "~0.2.0",
        "nanoid": "^2.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.1.6",
        "@babel/preset-env": "^7.1.6",
        "@types/lodash": "^4.14.119",
        "@types/node": "^10.12.18",
        "microbundle": "^0.9.0",
        "shx": "^0.3.2",
        "typescript": "^3.1.6"
    },
    "browserslist": [
        "> 1%",
        "ie 11",
        "not op_mini all"
    ],
    "keywords": [
        "a11y",
        "angular",
        "aria",
        "dom",
        "element",
        "form",
        "html",
        "id",
        "idlist",
        "idref",
        "ids",
        "label",
        "react",
        "rename",
        "replace",
        "rewire",
        "rewrite",
        "scope",
        "scoped",
        "spa",
        "vue"
    ]
}
